<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aseanfan.worldcafe.UI.CreateEventActivity"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="@string/genre"
            android:layout_marginBottom="@dimen/margin_left_right"/>


        <RadioGroup
            android:id="@+id/radgroup"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/margin_left_right">


                <RadioButton
                    android:id="@+id/radfriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="friend"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/radiobtnbackground"
                    android:button="@android:color/transparent"
                    android:layout_marginRight="20dp"/>

                <RadioButton
                    android:id="@+id/radlanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="language"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/radiobtnbackground"
                    android:button="@android:color/transparent"
                    android:layout_marginRight="20dp"/>



                <RadioButton
                    android:id="@+id/radlocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="local"
                    android:textAlignment="center"

                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/radiobtnbackground"
                    android:button="@android:color/transparent"
                    android:layout_marginRight="20dp"/>

                <RadioButton
                    android:id="@+id/radbusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="business"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/radiobtnbackground"
                    android:button="@android:color/transparent"
                    android:layout_marginRight="20dp"/>


        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/photo"
            android:layout_marginBottom="@dimen/margin_left_right"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop" />
            <ImageButton
                android:id="@+id/selectimage"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/camera" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_left_right"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/area"  />

        <Spinner
            android:id="@+id/choosearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"></Spinner>

        <TextView
            android:id="@+id/timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/schedule" />

        <CheckBox
            android:id="@+id/checktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="repeat"/>
        <LinearLayout
            android:id="@+id/container_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <EditText
                android:id="@+id/input_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="times"
                android:inputType="number"
                android:layout_marginRight="@dimen/margin_line_mypage"/>
            <Spinner
                android:id="@+id/spinner_typetimes"
                android:spinnerMode="dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/price"  />

        <EditText
            android:id="@+id/input_price"
            android:layout_width="match_parent"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/numberofparticipants"  />
        <EditText
            android:id="@+id/input_numbetofpartiicipants"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/title"  />
        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/detail"  />
        <EditText
            android:id="@+id/input_details"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="@string/note"  />
        <EditText
            android:id="@+id/input_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
          />


        <Button
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/Create_event" />


    </LinearLayout>
</ScrollView>
