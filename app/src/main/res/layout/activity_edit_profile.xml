<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            android:layout_height="200dp"
            android:background="#fff">

            <FrameLayout
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"></FrameLayout>

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="100dp"
                app:layout_collapseMode="parallax" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="@dimen/margin_line_mypage">

                <TextView
                    android:id="@+id/txtname"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:text="user name"
                    android:layout_marginTop="@dimen/margin_line_mypage"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:layout_marginLeft="@dimen/margin_left_right"/>
                <EditText
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="text vieew"
                    />
            </LinearLayout>

        </FrameLayout>



        <TextView
            android:id="@+id/titleIntroduce"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:text="@string/Introduce"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/margin_left_right"/>

        <EditText
            android:id="@+id/edtintroduce"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/margin_left_right"/>



        <FrameLayout
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/aqua">
        </FrameLayout>
        <TextView
            android:id="@+id/titleschool"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:text="@string/School" />

        <EditText
            android:id="@+id/edtschool"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/margin_left_right"/>

        <FrameLayout
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/aqua">
        </FrameLayout>
        <TextView
            android:id="@+id/titlecompany"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:text="@string/Company" />
        <EditText
            android:id="@+id/edtcompany"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginLeft="@dimen/margin_left_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="8pt"
            android:text="Sex" />
        <RadioGroup
            android:id="@+id/rad_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rad_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:layout_gravity="left"/>

            <RadioButton
                android:id="@+id/rad_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:layout_marginLeft="@dimen/margin_left_right"
                />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="8pt"
            android:text="Country" />
        <Spinner
            android:id="@+id/spinner_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="8pt"
            android:text="city" />
        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:text="Update"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>