<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/white">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            android:layout_height="200dp"
            android:background="#fff"
            android:layout_marginBottom="10dp">

            <FrameLayout
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"></FrameLayout>

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="30dp"
                app:layout_collapseMode="parallax" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="@dimen/margin_line_mypage">

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="text vieew"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/titleProfession"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Profession"
            android:gravity="center|left"
            android:drawableLeft="@drawable/ic_profession"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtProfession"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Update now"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"/>


        <TextView
            android:id="@+id/titleIntroduce"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Profile"
            android:gravity="center|left"
            android:drawableLeft="@drawable/ic_profile_introduce"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtintroduce"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Update now"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_place_blue"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/Country" />
        <Spinner
            android:id="@+id/spinner_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_place_blue"
            android:gravity="center|left"
            android:text="@string/city" />
        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:text="Genre of interest"
            android:gravity="center|left"
            android:drawableLeft="@drawable/ic_profile_introduce"
            android:layout_marginBottom="10dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

            <CheckBox
                android:id="@+id/radfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="friend"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minWidth="75dp"
                android:minHeight="25dp"
                android:background="@drawable/radiobtnbackground"
                android:button="@android:color/transparent"
                android:layout_marginRight="20dp"/>

            <CheckBox
                android:id="@+id/radlanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="language"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minWidth="75dp"
                android:minHeight="25dp"
                android:background="@drawable/radiobtnbackground"
                android:button="@android:color/transparent"
                android:layout_marginRight="20dp"/>



            <CheckBox
                android:id="@+id/radlocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="local"
                android:textAlignment="center"

                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minWidth="75dp"
                android:minHeight="25dp"
                android:background="@drawable/radiobtnbackground"
                android:button="@android:color/transparent"
                android:layout_marginRight="20dp"/>

            <CheckBox
                android:id="@+id/radbusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="business"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minWidth="75dp"
                android:minHeight="25dp"
                android:background="@drawable/radiobtnbackground"
                android:button="@android:color/transparent"
                android:layout_marginRight="20dp"/>

</LinearLayout>
        <TextView
            android:id="@+id/titleschool"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/School"
            android:drawableLeft="@drawable/ic_profile_school"
            android:gravity="center|left"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtschool"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Update now"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/titlecompany"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_profile_company"
            android:gravity="center|left"
            android:text="Work"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edtcompany"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:hint="Update now"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"
            />

