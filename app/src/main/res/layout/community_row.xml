<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorPrimary"
    android:id="@+id/timelinebackground"

    android:layout_marginTop="@dimen/margin_line_mypage"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/background_event"
        android:background="@color/black"
        android:orientation="vertical"
        android:alpha="0.50"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="35dp">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/white"/>
      <!--  <TextView
            android:id="@+id/txtstar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_star"
            android:textAlignment="center"
            android:drawablePadding="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="test "
            android:textColor="@color/white"
            />-->
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp">

            <TextView
                android:background="@drawable/genre_style"
                android:id="@+id/txttype"
                android:layout_width="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|center"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="test "
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="35dp"
                android:gravity="right">
            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:textSize="20dp"
                android:text="test "
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="test "
                android:singleLine="true"
                android:textColor="@color/white"
                android:gravity="right"
                android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="35dp"
    android:weightSum="2">

    <TextView
        android:id="@+id/txtlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_place_blue"
        android:drawablePadding="10dp"
        android:layout_weight="0.48"
        android:layout_marginLeft="5dp"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:text="test "
        android:textColor="@color/white"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:text="test "
            android:textStyle="bold"
            android:layout_weight="2"
            android:textColor="@color/white"
            />


        <ImageView
            android:id="@+id/imageLike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:background="@drawable/unlike"
            android:contentDescription="TODO"
            android:layout_marginRight="@dimen/space_icon_text"/>
        <TextView
            android:id="@+id/textLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_left_right"
            android:text="like"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/imageComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/comment"
            android:layout_marginRight="@dimen/space_icon_text"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/textComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="comment"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>

</FrameLayout>