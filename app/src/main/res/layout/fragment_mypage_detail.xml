        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_app">
        </FrameLayout>

        <TextView
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/titlenumberthanks"
            android:layout_gravity="left|center"
            android:drawableLeft="@drawable/ic_profile_numberthanks"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:text="@string/titlenumberthanks" />

            <TextView
                android:id="@+id/txtgive"
                android:layout_marginTop="@dimen/margin_line_mypage"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receivethanks" />


        <LinearLayout
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_directmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="@string/Direct_mesage"
            android:layout_marginRight="@dimen/margin_left_right"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:minHeight="30dp"
            android:background="@drawable/background_button"
            />
            <android.support.v7.widget.AppCompatButton
                android:layout_gravity="center"
                android:id="@+id/btn_createevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/Edit_profile"
                android:minHeight="30dp"
                android:layout_marginRight="@dimen/margin_left_right"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:textColor="@color/white"
                android:background="@drawable/background_button"/>
        </LinearLayout>
        <FrameLayout
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_app">
        </FrameLayout>
        <TextView
            android:id="@+id/titleschool"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_profile_school"
            android:gravity="center|left"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:text="@string/School" />
        <TextView

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/txtschool"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textStyle="bold" />
        <FrameLayout
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_app">
        </FrameLayout>
        <TextView
            android:id="@+id/titlecompany"
            android:layout_marginTop="@dimen/margin_line_mypage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_profile_company"
            android:gravity="center|left"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:text="@string/Company" />
        <TextView

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/txtcompany"
            android:layout_gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>